<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Login</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <style>
    body {
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: linear-gradient(270deg, #667eea, #764ba2, #f7971e, #ffd200);
      background-size: 800% 800%;
      animation: gradientShift 15s ease infinite;
      margin: 0;
      font-family: "Poppins", sans-serif;
    }

    @keyframes gradientShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .container {
      background: #fff;
      padding: 40px 30px;
      border-radius: 20px;
      box-shadow: 0 15px 40px rgba(0,0,0,0.3);
      width: 100%;
      max-width: 420px;
      animation: bounceIn 1s ease;
    }

    @keyframes bounceIn {
      0% { transform: scale(0.5); opacity: 0; }
      60% { transform: scale(1.1); opacity: 1; }
      80% { transform: scale(0.95); }
      100% { transform: scale(1); }
    }

    h2 {
      text-align: center;
      margin-bottom: 25px;
      color: #333;
    }

    .input-group {
      margin-bottom: 20px;
      position: relative;
    }

    .input-group i {
      position: absolute;
      top: 13px;
      left: 12px;
      color: #777;
      font-size: 16px;
    }

    input, select, textarea {
      width: 100%;
      padding: 10px 10px 10px 38px;
      border: 2px solid #ccc;
      border-radius: 12px;
      font-size: 15px;
      outline: none;
      background: #f9f9f9;
      color: #333;
      box-sizing: border-box;
      transition: 0.3s;
    }

    input:focus, select:focus, textarea:focus {
      border-color: #667eea;
      box-shadow: 0 0 8px rgba(102,126,234,0.6);
    }

    textarea {
      resize: none;
      min-height: 70px;
      max-height: 100px;
    }

    label {
      position: absolute;
      top: 12px;
      left: 40px;
      font-size: 14px;
      color: #180505;
      background: rgb(251, 251, 251);
      padding: 0 4px;
      transition: 0.3s ease;
      pointer-events: none;
    }

    input:focus + label,
    input:not(:placeholder-shown) + label,
    select:focus + label,
    select:not([value=""]) + label,
    textarea:focus + label,
    textarea:not(:placeholder-shown) + label {
      top: -10px;
      left: 35px;
      font-size: 12px;
      color: #667eea;
    }

    button {
      width: 100%;
      padding: 14px;
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      border: none;
      border-radius: 14px;
      font-size: 16px;
      cursor: pointer;
      margin-top: 10px;
      transition: transform 0.2s ease;
    }

    button:hover {
      transform: scale(1.05);
    }
    
    .error-message {
      color: red;
      margin-bottom: 15px;
      text-align: center;
      font-weight: bold;
    }

    .back-home {
      margin-top: 15px;
      display: block;
      text-align: center;
      text-decoration: none;
      font-weight: bold;
      color: #667eea;
    }

    @media (max-width: 600px) {
      .container {
        padding: 30px 20px;
      }
      input, select, textarea {
        font-size: 14px;
        padding: 8px 8px 8px 35px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>User Login</h2>

    <% if (message) { %>
      <div class="error-message"> <%= message %></div>
    <% } %>

    <form action="/userLogin" method="POST">
      <div class="input-group">
        <i class="fas fa-user"></i>
        <input type="text" id="first_name" name="first_name" placeholder=" " required>
        <label for="first_name">First Name</label>
      </div>

      <div class="input-group">
        <i class="fas fa-user"></i>
        <input type="text" id="last_name" name="last_name" placeholder=" " required>
        <label for="last_name">Last Name</label>
      </div>

      <div class="input-group">
        <i class="fas fa-venus-mars"></i>
        <select id="gender" name="gender" required>
          <option value="" disabled selected hidden></option>
          <option value="Male">Male</option>
          <option value="Female">Female</option>
          <option value="Other">Other</option>
        </select>
        <label for="gender">Gender</label>
      </div>

      <div class="input-group">
        <i class="fas fa-calendar"></i>
        <input type="number" id="age" name="age" placeholder=" " required min="5" max="120">
        <label for="age">Age</label>
      </div>

      <div class="input-group">
        <i class="fas fa-envelope"></i>
        <input type="email" id="email_id" name="email_id" placeholder=" " required>
        <label for="email_id">Email</label>
      </div>

      <div class="input-group">
        <i class="fas fa-map-marker-alt"></i>
        <textarea id="address" name="address" rows="3" placeholder=" " required></textarea>
        <label for="address">Address</label>
      </div>

      <button type="submit">Login</button>
    </form>
    <a href="/" class="back-home">â¬… Back to Home</a>
  </div>
</body>
</html>
