      title: "Record-Breaking Snowstorm Buries Parts of Japan",
      description: "A historic snowstorm has blanketed parts of northern Japan, causing travel chaos and power outages for thousands of residents.",
      image: "https://images.unsplash.com/photo-1610484832939-1b4535342523?auto=format&fit=crop&w=800&q=60",
      url: "#",
    }]
  };

  function loadNews(category, event) {
    let articlesToShow = [];
    if (category === 'all') {
      for (const catKey in staticNewsData) {
        articlesToShow.push(...staticNewsData[catKey]);
      }
    } else {
      articlesToShow = staticNewsData[category] || [];
    }

    newsContainer.innerHTML = "";
    if (articlesToShow.length === 0) {
      newsContainer.innerHTML = `<p style="text-align: center; color: #ffcccc;">No news available for this category.</p>`;
    } else {
      articlesToShow.forEach((article, i) => {
        const card = document.createElement("div");
        card.classList.add("news-card");
        card.innerHTML = `
          <img src="${article.image || 'https://via.placeholder.com/300x180'}" alt="news">
          <h3>${article.title}</h3>
          <p>${article.description || ''}</p>
          <a href="${article.url}" target="_blank" rel="noopener noreferrer">Read More</a>
        `;
        newsContainer.appendChild(card);
        setTimeout(() => card.classList.add("show"), i * 100);
      });
    }

    if (event && event.target) {
      document.querySelectorAll(".tab-btn").forEach(btn => btn.classList.remove("active"));
      event.target.classList.add("active");
    }
  }

  // Load default news ('all' category) when the page loads
  document.addEventListener('DOMContentLoaded', () => {
    const initialActiveButton = document.querySelector(".tab-btn.active");
    loadNews("all", { target: initialActiveButton });
  });
</script>

