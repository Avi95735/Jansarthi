<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard - Admin & Users</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background: #f2f2f2; }
    table { border-collapse: collapse; width: 100%; margin-bottom: 30px; background: #fff; }
    th, td { border: 1px solid #ccc; padding: 8px; text-align: left; }
    th { background: #667eea; color: white; }
  </style>
</head>
<body>
  <h2>Admins</h2>
  <table id="adminsTable">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Department</th>
        <th>Department ID</th>
        <th>Mobile No</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <h2>Users</h2>
  <table id="usersTable">
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Gender</th>
        <th>Age</th>
        <th>Address</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <script>
    async function fetchAdmins() {
      const res = await fetch("/api/admins");
      const data = await res.json();
      if (data.success) {
        const tbody = document.querySelector("#adminsTable tbody");
        tbody.innerHTML = "";
        data.data.forEach(admin => {
          tbody.innerHTML += `
            <tr>
              <td>${admin.id}</td>
              <td>${admin.name}</td>
              <td>${admin.department_name}</td>
              <td>${admin.department_id}</td>
              <td>${admin.mobile_no || 'N/A'}</td>
            </tr>`;
        });
      }
    }

    async function fetchUsers() {
      const res = await fetch("/api/users");
      const data = await res.json();
      if (data.success) {
        const tbody = document.querySelector("#usersTable tbody");
        tbody.innerHTML = "";
        data.data.forEach(user => {
          tbody.innerHTML += `
            <tr>
              <td>${user.id}</td>
              <td>${user.first_name}</td>
              <td>${user.last_name}</td>
              <td>${user.gender}</td>
              <td>${user.age}</td>
              <td>${user.address}</td>
              <td>${user.email_id}</td>
            </tr>`;
        });
      }
    }

    fetchAdmins();
    fetchUsers();
  </script>
</body>
</html>
